rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // REGRAS DE DESENVOLVIMENTO - MAIS PERMISSIVAS
    // ATENÇÃO: Use apenas durante desenvolvimento/teste!
    
    // Permitir leitura e escrita para usuários autenticados em todas as coleções
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}